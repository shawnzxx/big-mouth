    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "run get-restaurants function",
            "program": "${workspaceFolder}/node_modules/serverless/bin/serverless",
            "args": [
                "invoke",
                "local",
                "-f",
                "search-restaurants",
                "--path",
                "data.json" // You can use this argument to pass data to the function to help with the debug
            ],
            "env": {
                "restaurants_table": "restaurants"
            }
        }
    ]
}